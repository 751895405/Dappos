// app global css
body
  color $text
  font-family $font-main

.qr-code
  canvas
    width 100% !important
    height auto !important

@keyframes flipOutX
  0%
    transform perspective(400px)
    margin-top 0
  30%
    transform perspective(400px) rotate3d(1, 0, 0, -20deg)
    opacity 1
    margin-top 0
  100%
    transform perspective(400px) rotate3d(1, 0, 0, 90deg)
    opacity 0
    margin-top -4em

._navigation-tabs-wrapper
  .q-tab-icon
    font-size 1.3em
  .q-router-link-exact-active:after
    // border-bottom solid
    content ' '
    position absolute
    bottom 5%
    width 70%
    height 2.3px
    border-radius 2em
    background-color $gray-dark
  .q-tabs-scroller,
  .q-tab
    flex 1 1 auto
