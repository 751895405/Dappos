// app global css
body
  color $text
  font-family $font-main

.qr-code
  canvas
    width 100% !important
    height auto !important

@keyframes flipOutX
  0%
    transform perspective(400px)
    margin-top 0
  30%
    transform perspective(400px) rotate3d(1, 0, 0, -20deg)
    opacity 1
    margin-top 0
  100%
    transform perspective(400px) rotate3d(1, 0, 0, 90deg)
    opacity 0
    margin-top -4em
